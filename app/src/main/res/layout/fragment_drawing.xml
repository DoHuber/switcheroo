<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/drawing_text_hint"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/textview"
        app:layout_constraintEnd_toStartOf="@+id/drawing_draw_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/drawing_draw_view"
        app:layout_constraintTop_toTopOf="parent" />

    <no.ntnu.stud.dominih.groupten.switcheroo.DrawView
        android:id="@+id/drawing_draw_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/drawing_text_hint"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/drawing_send_button"
        app:layout_constraintTop_toBottomOf="@+id/drawing_text_hint" />

    <Button
        android:background="@drawable/rounded_buttons_canvas2"
        android:id="@+id/drawing_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/drawing_clear_button"
        android:text="@string/send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/drawing_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_buttons_canvas"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="24dp"
        android:text="@string/clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>